{{#section 'script'}}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var elems = document.querySelectorAll('.collapsible');
            var setAriaState = function(el, expanded) {
                var header = el.querySelector('.collapsible-header');
                if (header) {
                    header.setAttribute('aria-expanded', String(expanded));
                }
            };
            var setInitialAria = function(root) {
                root.querySelectorAll('li').forEach(function(item) {
                    var header = item.querySelector('.collapsible-header');
                    if (!header) return;
                    header.setAttribute('aria-expanded', String(item.classList.contains('active')));
                });
            };
            var attachKeyHandlers = function(root) {
                root.querySelectorAll('.collapsible-header').forEach(function(header) {
                    header.addEventListener('keydown', function(event) {
                        if (event.key === 'Enter' || event.key === ' ') {
                            event.preventDefault();
                            header.click();
                        }
                    });
                });
            };
            if (elems.length > 0 && window.M) {
                setInitialAria(document);
                attachKeyHandlers(document);
                window.M.Collapsible.init(elems, {
                    onOpenStart: function(el) { setAriaState(el, true); },
                    onCloseStart: function(el) { setAriaState(el, false); }
                });
            }
        });
    </script>
