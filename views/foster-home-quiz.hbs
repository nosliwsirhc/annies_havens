{{#section 'script'}}
    <script>
        function toggleQuizError(formRef, question, errorValue) {
            const qSelector = `#${question.name}-error`;
            const errorRef = formRef.querySelector(qSelector);
            if(question.value === errorValue) {
                errorRef.style.display = "block";
                setTimeout(() => {
                errorRef.style.opacity = "1";
                }, 1);
            } else {
                errorRef.style.opacity = "0";
                setTimeout(() => {
                errorRef.style.display = "none";
                }, 400);
            }
        }

        // Foster Home Quiz
        const fosterHomeQuiz = document.forms['foster-home-quiz'];
        if(fosterHomeQuiz) {
            quizState = {};
            fosterHomeQuiz.addEventListener('change', function(event) {
            const field = event.target;
            const qErrorVal = field.dataset.errorvalue;
            toggleQuizError(fosterHomeQuiz, field, qErrorVal);
            // This doesn't work with radio fields
            for(let i=0; i<fosterHomeQuiz.length; i++) {
                quizState[fosterHomeQuiz.elements[i].name] = fosterHomeQuiz.elements[i].value;
            }
            console.log(quizState);
            });
        }

        // Select Fields
        const selectFields = document.querySelectorAll('select');
        if (selectFields) {
            M.FormSelect.init(selectFields, {});
        }
    </script>
