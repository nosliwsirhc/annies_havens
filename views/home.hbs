{{#section "script"}}
  <script>
    const carousels = document.querySelectorAll(".carousel"); if
    (carousels.length > 0) { function lazyCarouselSlide(element) { if
    (element.classList.contains('lazy')) { element.classList.remove('lazy');
    element.classList.add('load'); } } const instances =
    M.Carousel.init(carousels, { fullWidth: true, indicators: false, onCycleTo:
    lazyCarouselSlide }); if (instances && instances.length > 0) {
    setInterval(() => { instances[0].next(); }, 8000); } } const parallax =
    document.querySelectorAll(".parallax"); if (parallax.length > 0) {
    M.Parallax.init(parallax, {}); } const tabs =
    document.querySelectorAll(".tabs"); if (tabs.length > 0) { M.Tabs.init(tabs,
    {}); } const ctaDismiss = document.querySelector(".dismiss"); if (ctaDismiss
    && carousels.length > 0) { ctaDismiss.addEventListener("click", () => {
    const cta = document.querySelector(".cta"); const carousel = carousels[0];
    if (cta) { cta.style.visibility = "hidden"; cta.style.opacity = "0"; } if
    (carousel) { carousel.style.marginTop = "0"; } }); } const youtubeElements =
    document.querySelectorAll('.youtube'); youtubeElements.forEach((youtube) =>
    { const source = "https://img.youtube.com/vi/" + youtube.dataset.embed +
    "/hqdefault.jpg"; const image = new Image(); image.src = source; image.alt =
    "YouTube video placeholder"; image.addEventListener("load", () => {
    youtube.appendChild(image); }); youtube.addEventListener('click', function()
    { const iframe = document.createElement("iframe");
    iframe.setAttribute("frameborder", "0");
    iframe.setAttribute("allowfullscreen", ""); iframe.setAttribute("src",
    "https://www.youtube.com/embed/" + this.dataset.embed +
    "?rel=0&showinfo=0&autoplay=1" ); this.innerHTML = "";
    this.appendChild(iframe); }); }); const mainstreamCard =
    document.querySelector('.mainstream'); if (mainstreamCard) {
    mainstreamCard.addEventListener('click', () => {
    window.location.assign('/care-programs#mainstream'); }); } const
    specialNeedsCard = document.querySelector('.special-needs'); if
    (specialNeedsCard) { specialNeedsCard.addEventListener('click', () => {
    window.location.assign('/care-programs#special-needs'); }); } const
    traumaFocusedCard = document.querySelector('.trauma-focused'); if
    (traumaFocusedCard) { traumaFocusedCard.addEventListener('click', () => {
    window.location.assign('https://safeharbours.ca'); }); }
  </script>
